# Database Configuration (for MySQL Workbench)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=test
DB_PORT=3306

# OpenFGA Cloud Configuration (get these from https://fga.dev)
OPENFGA_API_URL=https://api.fga.dev
OPENFGA_STORE_ID=your_store_id_here
